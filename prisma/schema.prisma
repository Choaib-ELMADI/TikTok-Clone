generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Video {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  caption   String
  likes     Int
  owner     String
  saves     Int
  hashtags  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  source    String

  @@map("videos")
}
