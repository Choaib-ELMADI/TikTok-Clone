generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Video {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  caption             String
  hashtags            String
  source              String
  likes               Int
  saves               Int
  userName            String
  userId              String
  userEmailAddress    String
  userProfileImageUrl String
  userLink            String
  showtimeline        Boolean
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  comments            Comment[]

  @@map("videos")
}

model Like {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userLink String
  videoId  String

  @@map("likes")
}

model Comment {
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  comment             String
  videoId             String   @db.ObjectId
  userName            String
  userLink            String
  userProfileImageUrl String
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  video               Video    @relation(fields: [videoId], references: [id])

  @@map("comments")
}
